    <addrLine>A Monsieur</addrLine>
    <addrLine>Monsieur <rs key="pers_DE-588-119166895" type="person"><abbr>N.<hi rend="#sup">as</hi></abbr> Bernoulli</rs></addrLine>
    <addrLine>licentié en droit</addrLine>
    <addrLine>à <rs key="place_GEO-2661604" type="place">Basle</rs></addrLine>
