                            <addrLine>Monsieur Nicolas Bernoull<choice><orig><g ref="#j">j</g></orig><reg>i</reg></choice></addrLine>
                            <addrLine>Docteur en Droit</addrLine>
                              <addrLine>franca per <rs type="place" key="place_GEO-2775220">Insprug</rs></addrLine>
                              <addrLine>√† <rs type="place" key="place_GEO-2661604">Basle</rs></addrLine></address></closer>
